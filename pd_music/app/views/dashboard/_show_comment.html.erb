<table class="table">
  <thead>
    <tr>
      <th scope="col">Comment</th>
    </tr>
  </thead>
  <tbody>
    <% if @comment.blank? %>
      <td class="text-center">No negative comment</td>
    <% else %>
      <% @comment.each do |c| %>
        <tr>
          <td data-bs-toggle="tooltip" data-bs-html="true" title="<span class='tooltip-text'><%= c.comment %></span>">
            <% if session["current_user"]["role"] != 3 %>
              <div class="student-name-comment"><%= c.firstname %> <%= c.lastname %></div>
            <% end %>
            <div class="dashboard-comment truncate d-inline-block">
              <%= c.comment %>
            </div>
            <div class="d-inline float-end">
              <% for i in 0..c.rating-1 do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor" class="bi bi-star-fill rating-icon active" viewBox="0 0 16 16">
                  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                </svg>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>