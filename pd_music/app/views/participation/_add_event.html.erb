<div class="div-add-subject-parti position-absolute bottom-0 end-0 me-3 mb-3">
    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-plus-circle-fill icon" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#createEventParticipation">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z"/>
    </svg>
</div>

<div class="modal fade" id="createEventParticipation" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createEventParticipationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <%= form_for :form_create_event, url: participation_add_event_path(format: :json), method: :POST, data: { action: "submit->participation#createEvent" } do |f| %>
            <div class="modal-header">
                <h5 class="modal-title" id="createEventParticipationLabel">Create event</h5>
                <button type="button" class="btn-close" id="close-icon-create-event-dialog" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="event_name" class="form-label">Event name :</label>
                    <%= f.text_field :event, value: params[:event], class: "form-control", id: "event_name" %>
                </div>

                <div class="mb-4">
                    <label for="description" class="form-label">Description <i>-(optional)</i> :</label>
                    <%= f.text_field :description, value: params[:description], class: "form-control", id: "event_description" %>
                </div>

                <div class="mb-3 row">
                    <label for="event_date" class="col-sm-1 col-form-label">Date: </label>
                    <div class="col-sm-11">
                        <%= f.date_field :event_date, as: :date, value: params[:event_date], class: "form-control" , id: "event_date" %>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= f.submit "Create", class: "btn btn-primary w-25" %>
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Close</button>
            </div>
            <% end %>
        </div>
    </div>
</div>