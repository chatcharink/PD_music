                <% else %>
                    <p class="p-task-name mt-2 border-bottom">Name : <%= user[reverse_data[i][2]]["firstname"] %> <%= user[reverse_data[i][2]]["lastname"] %><br> Task : <%= reverse_data[i][0] %><span class="ms-3">Score : <%= reverse_data[i][1] %></span></p>
                <% end %>
