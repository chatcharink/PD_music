<div class="modal fade" id="addHomeworkTypeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addHomeworkTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addHomeworkTypeModalLabel">Add homework type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <%= form_for :form_homework_type, url: homework_add_type_path(format: :json, subject_id: id, subject: subject, category: category_id), method: :POST, html: { data: { action: "submit->homework#addHomeworktypeSuccess" } }  do |f| %>
                    <div class="mb-3">
                        <label for="homework_type" class="form-label">Homework type</label>
                        <%= f.text_field :homework_type, value: params["type"], class: "form-control", id: "homework_type", placeholder: "Day" %>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <%= f.text_area :description, value: params["description"], class: "form-control", id: "description", rows: "2" %>
                    </div>

                    <div class="mb-3 text-center">
                        <%= f.submit "Add", class: "btn btn-primary", id: "btn-add-hw-type" %>
                        <button type="button" class="btn btn-outline-primary" id="btn-close-add-hw-type" data-bs-dismiss="modal">Close</button>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>