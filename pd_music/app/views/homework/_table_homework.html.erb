<table class="table table-hover table-homework-list">
    <thead>
        <tr>
            <th class="column-0 py-3">Homework</th>
            <th class="column-1 py-3">Score</th>
            <th class="column-2 py-3">Status</th>
            <th class="column-3 py-3">Estimated date</th>
        </tr>
    </thead>
    <tbody>
        <% @homework.each do |hw| %>
        <tr>
            <td class="py-3"><%= hw.task_name%></td>
            <td class="py-3"><%= hw.score %>/<%= hw.full_score %></td>
            <% if hw.homework_status == "active" %>
                <td class="py-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill table-status-<%= hw.status %>" viewBox="0 0 16 16">
                        <circle cx="8" cy="8" r="8"/>
                    </svg>
                    <%= hw.status.capitalize %>
                </td>
                <td class="py-3"><%= hw.estimate_date.strftime("%d/%m/%Y") %></td>
            <% else %>
                <td class="py-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2"/>
                    </svg> Locked
                </td>
                <td class="py-3"></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>