<!-- Button trigger modal -->
<button type="button" class="btn btn-primary me-1 float-end px-2 py-1" data-bs-toggle="modal" data-bs-target="#commentClassRoom">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
    </svg>
</button>

<!-- Modal -->
<div class="modal fade" id="commentClassRoom" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="commentClassRoomLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentClassRoomLabel">Comment behaviour</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <%= form_for :form_comment, url: dashboard_comment_path(format: :json), method: :POST do |f| %>
                <div class="mb-3 row">
                    <label for="comment-to" class="col-sm-2 col-form-label">To: </label>
                    <div class="col-sm-10">
                        <%= f.select :comment_to, @data["specific_category"]["student_list"], {}, class: "form-select", id: "comment-to" %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="subject" class="col-sm-2 col-form-label">Subject: </label>
                    <div class="col-sm-10">
                        <%= f.text_field :subject, value: "", class: "form-control", id: "subject" %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="comment" class="col-sm-2 col-form-label">Comment: </label>
                    <div class="col-sm-10">
                        <%= f.text_area :comment, value: "", class: "form-control", id: "comment", rows: "2" %>
                    </div>
                </div>

                <div class="mb-5 row">
                    <label for="comment" class="col-sm-2 col-form-label">Rating: </label>
                    <div class="col-sm-10 py-2">
                        <div class="stars">
                            <% for i in 0..4 do %>
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16" data-action="click->dashboard#rating" data-dashboard-rating-param="<%= i %>">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                            </svg>
                            <% end %>
                        </div>
                        <%= f.hidden_field :rating, value: 0, id: "hide-rating"%>
                    </div>
                </div>

                <div class="mb-3 row text-center">
                    <%= f.submit "Comment", class: "btn btn-primary w-25 m-auto" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>