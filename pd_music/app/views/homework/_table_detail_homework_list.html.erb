<div class="w-90 my-3 px-3 m-auto rounded-3 border">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary mt-3" id="btn-change-status" data-bs-toggle="modal" data-bs-target="#changeStatusBackdrop" style="display: none">
        Change status
    </button>

    <!-- Modal -->
    <div class="modal fade" id="changeStatusBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="changeStatusBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changeStatusBackdropLabel">Change status</h5>
                    <%# <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> %>
                </div>
                <div class="modal-body">
                    <div class="mb-3 row">
                        <label for="select-status" class="col-sm-2 col-form-label">Status:</label>
                        <div class="col-sm-10">
                            <%= select_tag :status, options_for_select(get_status(), selected: "open"), class: "form-select", id: "select-status" %>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" data-action="click->homework-detail#updateStatus" data-homework-detail-url-param="<%= homework_do_update_status_path() %>">Change</button>
                </div>
            </div>
        </div>
    </div>

    <%= content_tag :table, class: "table table-hover table-do-homework-list", id: "table-detail-homework-list", width: "100%", data: { url: homework_do_detail_datatable_path(format: :json)} do %>
        <thead>
            <tr>
                <th class="py-3"></th>
                <th class="column-0 py-3">Name</th>
                <th class="column-1 py-3">Subject</th>
                <th class="column-2 py-3">Homework</th>
                <th class="column-3 py-3">Status</th>
                <th class="column-4 py-3 text-center">Estimated date</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    <% end %>
</div>