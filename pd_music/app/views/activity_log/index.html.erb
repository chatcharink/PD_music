<% is_user_logged_in? %>

<div class="h-100" data-controller="activity-log">
    <div class="border-bottom">
        <h5 class="title-menu ps-3 pb-3 my-3 w-100 d-inline-block border-bottom">Activity logs</h5>
        <div class="div-table-activity m-auto" style="width: 95%">
            <%= content_tag :table, class: "table table-hover", id: "table-activity-list", width: "100%", data: { url: activity_log_datatable_path(format: :json)} do %>
                <thead>
                    <tr id="header_table">
                        <th class="text-start column-0">Name</th>
                        <th class="text-start column-1">Device</th>
                        <th class="text-start column-2">Action</th>
                        <th class="text-start column-3">Result</th>
                        <th class="text-start column-4">Detail</th>
                        <th class="text-start column-5">Date time</th>
                    </tr>
                </thead>
                <tbody>
                
                </tbody>
            <% end %>
        </div>
    </div>
</div>