<div class="modal fade" id="createRestaurant" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createRestaurantLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <%= form_for :form_create_restaurant, url: food_create_path(format: :json), method: :POST, data: { action: "submit->food#createRestaurant" } do |f| %>
            <div class="modal-header p-0">
                <div class="div-header-restaurant m-auto">
                    <%= image_tag("#{APP_CONFIG[:application_path]}/pictures/no_image.jpg", id: "avatar_profile", class: "img-profile", width: "498px", height: "264px") %>
                    <%= f.file_field :restaurant_pic, accept: ".png, .jpg, .jpeg .gif", data: { action: "change->food#uploadAvatar" }, class: "d-none", id: "upload-restaurant-pic" %>
                    <div class="div-upload-restaurant-icon rounded-circle p-3 position-absolute end-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-fill position-absolute end-0 me-3 p-2 border rounded-circle upload-restaurant-icon" viewBox="0 0 16 16" for="upload-restaurant-pic" data-action="click->food#clickFileUpload">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                        </svg>
                    </div>
                </div>
                <%# <button type="button" class="btn-close" id="close-icon-create-restaurant-dialog" data-bs-dismiss="modal" aria-label="Close"></button> %>
            </div>
            <div class="modal-body mx-3">
                <div class="mb-3">
                    <label for="restaurant" class="form-label">Restaurant name :</label>
                    <%= f.text_field :restaurant, value: "", class: "form-control", id: "restaurant" %>
                </div>

                <div class="mb-3">
                    <label for="select-status" class="form-label">Status :</label>
                    <%= f.select :status, options_for_select(get_select_status(), "active"), {}, { class: "form-select", id: "select-status" } %>
                </div>

                <div class="mb-3">
                    <label for="telephone" class="form-label">Telephone No.: <i>- optional</i></label>
                    <%= f.text_field :telephone, value: "", class: "form-control", id: "telephone" %>
                </div>

                <div class="mb-3">
                    <label for="line" class="form-label">Line ID : <i>- optional</i></label>
                    <%= f.text_field :line, value: "", class: "form-control", id: "line" %>
                </div>

                <%= f.hidden_field "update_id", value: "", id: "update-restaurant-id" %>
                
            </div>
            <div class="modal-footer">
                <%= f.submit "Create", class: "btn btn-primary w-25", id: "btn-create-restaurant" %>
                <button type="button" class="btn btn-outline-primary" id="close-add-reataurant" data-bs-dismiss="modal" data-action="click->food#clearDefault">Close</button>
            </div>
            <% end %>
        </div>
    </div>
</div>