<div class="mb-3 w-75 border rounded-3 p-3 m-auto" style="padding-bottom: 4rem !important;">
    <%= content_tag :table, class: "table table-hover table-menu-list", id: "table-menu-list", width: "100%", data: { url: food_menu_datatable_path(format: :json, id: restaurant_id)} do %>
        <thead>
            <tr>
                <th class="column-0 py-3"></th>
                <th class="column-1 py-3">Menu</th>
                <th class="column-2 py-3 text-center">Price</th>
                <th class="column-3 py-3">Status</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    <% end %>
</div>

<% if can_view_menu?([49]) || can_view_menu?([50]) %>
    <%= render partial: "add_menu_dialog", locals: {page: "menu", restaurant_id: restaurant_id} %>
<% end %>